<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriorityActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/priorityNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/PriorityName"
            android:gravity="center"
            android:inputType="textShortMessage" />
    </android.support.design.widget.TextInputLayout>

    <HorizontalScrollView
        android:id="@+id/imageScrollView"
        android:layout_width="375dp"
        android:layout_height="99dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="16dp"
        android:fillViewport="true"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:id="@+id/imageLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:tag="@android:drawable/ic_dialog_info"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@android:drawable/ic_dialog_info"
                tools:layout_editor_absoluteY="183dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/ic_menu_help"
                app:srcCompat="@android:drawable/ic_menu_help" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/ic_lock_silent_mode_off"
                app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/ic_dialog_email"
                app:srcCompat="@android:drawable/ic_dialog_email" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/ic_menu_search"
                app:srcCompat="@android:drawable/ic_menu_search" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/sym_action_chat"
                app:srcCompat="@android:drawable/sym_action_chat" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/ic_lock_lock"
                app:srcCompat="@android:drawable/ic_lock_lock" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:drawable/btn_star_big_off"
                app:srcCompat="@android:drawable/btn_star_big_off" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/colorScrollView"
        android:layout_width="378dp"
        android:layout_height="86dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492">

        <LinearLayout
            android:id="@+id/colorLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/redButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:color/holo_red_dark"
                app:srcCompat="@android:color/holo_red_dark"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="383dp" />

            <ImageButton
                android:id="@+id/orangeButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:color/holo_orange_dark"
                app:srcCompat="@android:color/holo_orange_dark"
                tools:layout_editor_absoluteX="260dp"
                tools:layout_editor_absoluteY="408dp" />

            <ImageButton
                android:id="@+id/yellowButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                app:srcCompat="@android:color/holo_orange_light"
                tools:layout_editor_absoluteX="488dp"
                tools:layout_editor_absoluteY="336dp" />

            <ImageButton
                android:id="@+id/greenButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:color/holo_green_dark"
                app:srcCompat="@android:color/holo_green_dark"
                tools:layout_editor_absoluteX="123dp"
                tools:layout_editor_absoluteY="379dp" />

            <ImageButton
                android:id="@+id/blueButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:color/holo_blue_dark"
                app:srcCompat="@android:color/holo_blue_dark"
                tools:layout_editor_absoluteX="337dp"
                tools:layout_editor_absoluteY="401dp" />

            <ImageButton
                android:id="@+id/blackButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:contentDescription="@android:string/untitled"
                android:onClick="onClick"
                android:padding="6dp"
                android:tag="@android:color/black"
                app:srcCompat="@android:color/black"
                tools:layout_editor_absoluteX="188dp"
                tools:layout_editor_absoluteY="412dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/spinnerRingtone"
        android:layout_width="329dp"
        android:layout_height="69dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="120dp"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:animationCache="false"
        android:spinnerMode="dropdown"
        android:visibility="visible"
        android:background="@drawable/dark_border"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        style="@style/AlertDialog.AppCompat.Light"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        app:itemBackground="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="75dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/returnPriorityButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@android:string/cancel"
                android:focusableInTouchMode="true"
                android:onClick="onClick"
                android:padding="0dp"
                android:background="@drawable/button_border"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <Button
                android:id="@+id/createPriorityButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@android:string/ok"
                android:onClick="onClick"
                android:padding="0dp"
                android:text="ADD PRIORITY"
                android:textColor="#ffffff"
                android:background="@drawable/button_border"
                app:srcCompat="@android:drawable/ic_menu_add"
                tools:srcCompat="@mipmap/ic_ok" />

        </LinearLayout>

    </android.support.design.widget.BottomNavigationView>


</android.support.constraint.ConstraintLayout>